void mystatus(user person, int flightnum){
    FILE *u = fopen("Flights.txt", "r+b");
    if (!u) {
        printf("Error opening files.\n");
        return;
    }



    Flight flight;
    bool found = false;

    while (fread(&flight, sizeof(Flight), 1, u) == 1) {
        if (flight.Number == flightnum) {
            printf("Plane is sceduled:\n");
            fprintf("Flight %d Scheduled at %d:%d on %d of %d month of year %d:\n", flight.Number,flight.S.min, flight.S.hours, flight.S.day
            ,flight.S.month, flight.S.year);
            found = true;
            break;
        }
    }

    if (!found) {
        fprintf(statusFile, "Flight %d is either canceled or not scheduled.\n", flightnum);
    }

    fclose(statusFile);
}

typedef struct{
    
    int hours;
    int min;
    int day;
    int month;
    int year;

}schedule;

typedef struct {
    int Number;
    int maxcapacity;
    int capacity;
    int fare;

    schedule S;

}Flight;